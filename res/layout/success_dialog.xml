<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:layout_marginLeft="20dip"
	android:layout_marginRight="20dip"
	android:background="#ECECEC">

    <TextView
        android:id="@+id/success_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:gravity="center_horizontal"
		android:padding="10dip"
		android:text="@string/success_dialog_title"
		android:textSize="20sp"
		android:textStyle="bold"
		android:textColor="#FFFFFF"
        android:background="#FFB91C"/>
    
    <ImageView
        android:id="@+id/success_dialog_icon"
        android:layout_width="80dip"
        android:layout_height="90dip"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/success_dialog_title"
        android:layout_marginTop="10dip"/>
    
    <ImageView
        android:id="@+id/success_dialog_stars"
        android:layout_width="150dip"
        android:layout_height="70dip"
        android:scaleType="centerInside"
        android:layout_below="@id/success_dialog_title"
        android:layout_marginTop="80dip"
        android:layout_centerHorizontal="true"
        android:src="@drawable/star_icon"/>
    
    <TextView 
        android:id="@+id/success_dialog_msg"
        android:layout_below="@id/success_dialog_stars"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:textSize="16sp"/>
    
    <Button
        android:id="@+id/success_dialog_done"
        android:layout_below="@id/success_dialog_msg"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="-5dip"
        android:layout_marginRight="-5dip"
		android:layout_marginBottom="-5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="0dip"
        android:minWidth="0dip"
        android:padding="20dip"
        android:text="@string/success_dialog_btn"
        android:background="#33B679"
        android:textColor="#FFFFFF"/>
        
</RelativeLayout>