<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_layout_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC" >

<!--     android:minHeight="?android:attr/listPreferredItemHeight" -->


    <!--
     	<RelativeLayout
	    android:id="@+id/image_and_line"
	    android:layout_width="30dip"
	    android:layout_height="match_parent"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="16dip"
	    android:background="#ACACAC">
    -->

    <View
        android:id="@+id/line"
        android:layout_width="4dip"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dip"
        android:layout_alignParentBottom="true"
        android:background="#ACACAC" />

    <!--
     	    <View
	        android:id="@+id/half_line"
	        android:layout_width="4dip"
	        android:layout_height="12dip"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:background="#ACACAC"/>
    -->

    <ImageView
        android:id="@+id/tick_icon"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:contentDescription="@string/done"
        android:scaleType="fitXY"
        android:src="@drawable/tick" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="40dip"
        android:layout_toRightOf="@id/tick_icon"
        android:orientation="vertical"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/note_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="40dip"
            android:textColor="#4B4B4B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/note_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#4B4B4B"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/delete_note_icon"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:scaleType="fitXY"
        android:src="@drawable/delete" />
    
    <Button 
        android:id="@+id/delete_note_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="40dip"
        android:layout_height="match_parent"
        android:alpha="0"/>

</RelativeLayout>