	<RelativeLayout
	    android:id="@+id/archive_goal_info"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#C8871E">

	    <TextView
	        android:id="@+id/archive_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginBottom="7dip"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:layout_marginTop="70dip"
	        android:textColor="#FFFFFF"
	        android:textSize="30sp" />

        <TextView
            android:id="@+id/archive_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/archive_title"
            android:layout_below="@id/archive_title"
            android:layout_marginBottom="7dip"
            android:textColor="#E6E6E6"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/archive_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/archive_title"
            android:layout_below="@id/archive_start"
            android:layout_marginBottom="10dip"
            android:textColor="#E6E6E6"
            android:textSize="16sp" />
        
    </RelativeLayout>

	<!-- Listview for showing progress notes for both goals and habits -->

	<TextView 
	    android:id="@+id/archive_notes"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#737373"
       	android:paddingBottom="6dip"
        android:paddingLeft="20dip"
        android:paddingRight="10dip"
        android:paddingTop="6dip"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#DDE9ED"
        android:text="@string/notes" />

	<ListView
	    android:id="@+id/archive_progress_list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:divider="#ACACAC"
	    android:dividerHeight="1px" >
	</ListView>
    
</LinearLayout>
