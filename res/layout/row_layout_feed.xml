<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearRowLayout"
    android:layout_width="match_parent"
    android:layout_height="106dip">
    
<!--     <View
        android:id="@+id/grey_bg"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="#969696"/> -->

    <RelativeLayout
        android:id="@+id/rowlayout"
        android:layout_width="match_parent"
        android:layout_height="100dip">

        <TextView
            android:id="@+id/feed_title"
            style="@style/feedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="80dip"
            android:layout_marginTop="7dip" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/feed_category"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="0dip"
            android:background="#FFFFFF" />

        <TextView
            android:id="@id/feed_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="2dip"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="italic" />
        
        <ImageView
            android:id="@+id/feed_icon"
            android:layout_width="75dip"
            android:layout_height="85dip"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dip"/>

        <!-- Removing level and count -->
        <!--
         <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dip"
        android:layout_marginTop="9dip"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/level"
        android:layout_below="@id/level"
        android:layout_marginTop="8dip"
        android:textSize="12sp" />
        -->

    </RelativeLayout>
    
    <View
        android:id="@+id/feed_grey_mask"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="@drawable/listitem_selector" />
    
    <View
        android:id="@+id/feed_shadow"
        android:layout_below="@id/rowlayout"
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:background="@drawable/shadow" />

</RelativeLayout>
