<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    
<!--     <style name="AppTheme" parent="AppBaseTheme">
        All customizations that are NOT specific to a particular API-level can go here.
    </style> -->
	
    <!-- Application theme. -->
    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="vpiTabPageIndicatorStyle">@style/MyTabPageIndicator</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">#4B4B4B</item>
        
        <item name="android:windowContentOverlay">@drawable/title_bar_shadow</item>
        
        <item name="android:homeAsUpIndicator">@drawable/action_previous_item_dark</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>
    
    
    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/action_overflow</item>
    </style>
    
<!-- 
    <style name="HomeAsUp" parent="@android:style/Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/ic_action_previous_item_dark</item>
    </style> -->
    
<!--     <style name="HomeAsUpLight" parent="@android:style/Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/ic_action_previous_item</item>
    </style>
      -->
    
    <style name="MyTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#4B4B4B</item>
    </style>
    
    <!--  Action Bar style -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#E5E5E5</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:itemTextAppearance">@style/MyTextAppearance</item>
    </style>
    
    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#4B4B4B</item>
    </style>

    <style name="MyTextAppearance">
        <item name="android:textColor">#4B4B4B</item>
    </style>
    
    
    <!--  Transparent action bar -->
    <style name="NewActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#A8A8A8</item>
        <item name="android:alpha">0.6</item>
        <item name="android:titleTextStyle">@style/NewActionBarTitleText</item>
    </style>
    
    <style name="NewActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#3F3E3E</item>
	</style>        
	
    
    <!--  Element styles -->
        
    <style name="darkText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="lightText">
        <item name="android:textColor">#C5B3B0</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="darkBackground">
        <item name="android:background">#1A1916</item>
    </style>
    
    <style name="feedTitle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="homeDate">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="homeBackground">
        <item name="android:background">#F4F4F4</item>
    </style>
    
    <style name="tabStyle">
        <item name="android:background">#E5E5E5</item>
    </style>
    
    <style name="selectedItem">
        <item name="android:background">#000000</item>
        <item name="android:alpha">0.4</item>
    </style>

</resources>
